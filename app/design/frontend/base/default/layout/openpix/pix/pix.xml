<?xml version="1.0"?>
<layout version="0.1.0">
    <checkout_onepage_index translate="label">
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>openpix_pix/css/openpix_pix.css</name>
            </action>
            <action method="addJs">
                <script>openpix/main.js</script>
            </action>
        </reference>
    </checkout_onepage_index>
    <checkout_onepage_success translate="label">
        <reference name="content">
            <reference name="checkout.success">
                <block type="core/template" name="openpix.info" template="openpix/pix/checkout/success.phtml" />
            </reference>
        </reference>
    </checkout_onepage_success>
</layout>
